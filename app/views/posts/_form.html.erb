<%= form_with(model: [current_user, post], local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :title, placeholder: "Enter the title..." %>
  </div>

  <div class="field">
    <%= form.text_area :content, placeholder: "Type your content...."  %>
  </div>

  <div class="field">
    <%= form.text_area :tags, placeholder: "Tags....."  %>
  </div>
  
  <div class="field">
    <%= form.label :is_public %>
    <%= form.check_box :is_public %>
  </div>

  <div class="field">
    <%= form.label :Upload_image %>
    <%= form.file_field :images, multiple: true %>
  </div>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
