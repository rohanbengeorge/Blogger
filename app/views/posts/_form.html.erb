<%= form_with(model: [current_user, post], local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :title, placeholder: "Enter the title...", class:"form-control", required: true %>
  </div>

  <textarea name="content "></textarea>

  <div class='field'>
     <%= form.text_field :tag_list, placeholder: 'Tags (separated by commas)',class:"form-control tag_field" %>
  </div>
  
  <div class="field form-inline">
    <%= form.label :is_public, class:"m-1" %>
    <%= form.check_box :is_public,  class:"form-control" %>
  </div>

  <div class="field ">
    <%= form.label :Upload_image %>
    <%= form.file_field :images, multiple: true %>
  </div>
  
  <div class="actions">
    <%= form.submit "Submit",class:"btn btn-success"%>
  </div>
<% end %>
