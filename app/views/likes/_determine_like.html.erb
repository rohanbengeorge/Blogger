<% @like = Like.find_by(
      likable_id: post_id,
      user_id: user_id,
      likable_type: likable_type
      )%>
<% if @like.nil?  %>
  <%= render 'likes/like_button', { post_id: post_id, likable_type: likable_type } %>
<% else %>
  <%= render 'likes/dislike_button', { post_id: post_id, likable_type: likable_type } %>
<% end %>