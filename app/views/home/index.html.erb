
<div class="container col-sm">
  <h1>Home#index</h1>
  <p>Find me in app/views/home/index.html.erb</p>


  <ul>
    <% if user_signed_in? %>
      <li>
        <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
      </li>
      <li>
        <%=current_user.email %>
      </li>
      <li>
        <%= link_to 'User index', users_path %>
      </li>

      
      <div class="row">
        <aside class="col-md-4">
          <section class="stats">
            <%= render 'shared/stats' %>
          </section>
      </div>
      <%= link_to 'Personal Feeds', home_personal_feeds_path, remote:true %>
      <%= link_to 'Public Feeds', home_all_public_feeds_path, remote:true %>
      <%= link_to 'All feeds', home_all_feeds_path, remote:true %>

      <div id = "posts">
        <%= render 'display_posts', posts: @posts %>

      </div>
    <% else %>
      <li>
        <%= link_to 'Sign in', user_session_path %>
      </li>
      <li>
        <%= link_to 'Sign Up', new_user_registration_path %>
      </li>
    <% end %>
    
  </ul>
</div>